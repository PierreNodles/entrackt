<div class="container">

  {{ form_start(form) }}

  {{ form_errors(form) }}


  <div class="form-group">
    <i class="icon fa fa-film" aria-hidden="true"></i>
    {{ form_errors(form.movie) }}
    {{ form_widget(form.movie, { 'attr': {'class': 'form-control custom-select'} }) }}
  </div>

  <div class="form-group">
    <i class="icon fa fa-picture-o" aria-hidden="true"></i>
    {{ form_errors(form.image) }}
    {{ form_widget(form.image) }}
  </div>

  <div class="form-group">
    <i class="icon fa fa-font" aria-hidden="true"></i>
    {{ form_errors(form.title) }}
    {{ form_widget(form.title, { 'attr': {'class': 'form-control', 'placeholder' : "Titre de la critique"} }) }}
    <p class="alert alert-danger"></p>
  </div>

  <div class="form-group">
    <i class="icon fa fa-quote-left" aria-hidden="true"></i>
    {{ form_errors(form.critique) }}
    {{ form_widget(form.critique, { 'attr': {'class': 'form-control', 'placeholder' : "Critique..", 'style' : "min-height:200px; padding-top:10px"} }) }}
  </div>

  {{ form_widget(form.submit, {'attr': {'class': 'btn btn-default submit'}}) }}

  {{ form_end(form) }}
